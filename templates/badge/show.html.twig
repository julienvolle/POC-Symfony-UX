{% extends 'base.html.twig' %}

{% block title %}Badge{% endblock %}

{% block content %}

    <div class="container mt-5">

        <h1>Badge</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ badge.id }}</td>
                </tr>
                <tr>
                    <th>Label</th>
                    <td>{{ badge.label }}</td>
                </tr>
